# BasedOnStyle: GNU
Language: Cpp # Yes, should also be used for C. 
UseTab: Never
# BreakBeforeBraces: GNU          # TODO: Test. This might also do the job.
BreakBeforeBraces: Custom
BraceWrapping:
  AfterControlStatement: Always
  AfterEnum: true
  AfterExternBlock: true
  AfterFunction: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  BeforeWhile: false
  IndentBraces: true
IndentWidth: 2
IndentPPDirectives: BeforeHash # indentation of preprocessor directives
PPIndentWidth: -1 # Uses IndentWidth if set to -1
AlignConsecutiveAssignments: 
  Enabled: true
  AcrossEmptyLines: true
  AcrossComments: false
  AlignCompound: true
  PadOperators: true
AlignConsecutiveDeclarations:
  Enabled: true
  AcrossEmptyLines: true
  AcrossComments: false
AlignConsecutiveMacros:
  Enabled: true
  AcrossEmptyLines: true
  AcrossComments: true
AlignEscapedNewlines: Right          # TODO: This equivalent to 'LeftWithLastLine' as long as 'ColumnWidth: 0'
AlignTrailingComments:
  Kind: Always
  OverEmptyLines: 1
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortBlocksOnASingleLine: Never
AllowShortCaseLabelsOnASingleLine: false
AllowShortEnumsOnASingleLine: false
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AlwaysBreakBeforeMultilineStrings: true   # If undesired in argp_options of bwc_cmdl.c use clang-format on/off
# Details
BinPackArguments: true
BinPackParameters: true
BreakBeforeBinaryOperators: None
BreakStringLiterals: true
ColumnLimit: 0                         # TODO: choose a value, 80 currently distorts old docstrings
ContinuationIndentWidth: 2             # TODO: choose a value
IncludeBlocks: Preserve
InsertBraces: true
InsertNewlineAtEOF: true
MaxEmptyLinesToKeep: 1
PointerAlignment: Right
QualifierAlignment: Leave             # TODO: could be used to enforce left or right const. Maybe specify QualifierOrder
ReferenceAlignment: Right
ReflowComments: false
SeparateDefinitionBlocks: Always
SortIncludes: CaseInsensitive
# Spaces
SpaceAfterCStyleCast: false
SpacesBeforeTrailingComments: 4
SpaceBeforeParens: Custom
SpaceBeforeParensOptions:
  AfterControlStatements: false
  AfterFunctionDefinitionName: false
SpaceBeforeSquareBrackets: false
SpacesInContainerLiterals: false
SpaceInEmptyBlock: false
SpaceInEmptyParentheses: false
SpacesInLineCommentPrefix:
  Maximum: 1
  Minimum: 1
SpacesInParens: Never